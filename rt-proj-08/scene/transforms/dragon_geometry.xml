            <!-- <material type="blinn" name="gold"  diffuse="0 0.65 0.29" specular="0.8 0.8 0.8" mirror="0.1 0.1 0.1" glossiness="128"/> -->
            <rotate axis="0 1 0" angle="20.001"/>
            <!-- <scale value="0.6 0.6 0.6"/> -->
            <!-- <object type="sphere" radius="0.4"/> -->
            <object type="trianglemesh" filename="scene/models/dragon.obj" reverse_vertex_order="false" backface_cull ="true"/>
        <object_instance_end/>
        <object_instance_begin name="teapot"/>
            <named_material name="jade"/>
            <!-- <material type="blinn" name="gold"  diffuse="0 0.65 0.29" specular="0.8 0.8 0.8" mirror="0.1 0.1 0.1" glossiness="128"/> -->
            <rotate axis="1 0 0" angle="270.001"/>
            <rotate axis="0 0 1" angle="-20.001"/>
            <rotate axis="0 1 0" angle="30.001"/>
            <scale value="0.03 0.03 0.03"/>
            <!-- <object type="sphere" radius="0.4"/> -->
            <!-- <object type="trianglemesh" filename="scene/models/teapot-low.obj" reverse_vertex_order="false" backface_cull ="true"/> -->
