        <object type="sphere" radius="1"/>
        
        <identity/>
        <translate value="0.3 0.1 -1.3" />
        <scale value="0.03 0.03 0.03"/>
        <rotate axis="0 1 0" angle="60.001"/>
        <include filename="scene/transforms/03_dinning_table.xml" />

        <identity/>
        <translate value="0 0 -1.5" />
        <scale value="0.03 0.03 0.03"/>
        <rotate axis="0 1 0" angle="35.0"/>
