        <!-- Ground -->
        <make_named_material type="blinn" name="gold" diffuse ="1 0.65 0.0"  specular ="0.8 0.6 0.2"
            mirror ="0.4 0.4 0.4" glossiness ="512"/>
        <make_named_material type="blinn" name="indigo"   ambient="0.2 0.2 0.2" diffuse ="51 0 102"  specular ="0.9 0.9 0.9" mirror ="0.1 0.1 0.1" glossiness ="128"/>
        <make_named_material type="blinn" name="red"   ambient="0.2 0.2 0.2" diffuse ="0.9 0.2 0.1"  specular ="0.9 0.9 0.9" mirror ="0.1 0.1 0.1" glossiness ="256"/>
