        <object_instance_end/>

        <identity/>
        <translate value="0 0.3 0" />
        <object_instance_call name="dragon" />

        <identity/>
        <translate value="0.3 1 -1.6" />
        <object_instance_call name="teapot" />

        <identity/>
        <translate value="-4 1.2 2" />
        <material type="blinn" diffuse="0.99 0.99 0.99"  specular="1 1 1" mirror="0.1 0.1 0.1" glossiness="128" />
        <object type="sphere" radius="1.5"/>

        <identity/>
        <translate value="0 1.2 2" />
